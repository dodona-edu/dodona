.material-icons.md-18 { font-size: 18px; }
.material-icons.md-24 { font-size: 24px; }
.material-icons.md-36 { font-size: 36px; }
.material-icons.md-48 { font-size: 48px; }

.glyphicon.glyphicon-strikethrough:after {
    position: absolute;
    top: -12px;
    left: 6px;
    content: "|";
    display: block;
    font-weight: bold;
    font-size: 1.5em;
    font-size: 250%;
    transform: rotate(45deg);
}

.custom-material-icons {
  display: inline-block;
  width: 24px;
  height: 24px;

  &.fix-alignment {
    position: absolute;

    &.square_edit {
      top: 9px;
      right: 10px;
    }
  }


  &.md-12 { width: 12px; height: 12px; }
  &.md-18 { width: 18px; height: 18px; }
  &.md-24 { width: 24px; height: 24px; }
  &.md-36 { width: 36px; height: 36px; }
  &.md-48 { width: 48px; height: 48px; }
}

figcaption {
    margin: 0 10px;
}
