@import "theme/colors.css.less";
@import "theme/theme.css.less";
<% if Rails.env.development? %>
@import "theme/development.css.less";
<% end %>

body {
  font-size: 14px;
  font-family: helvetica, sans-serif;
}

a {
  color: @link-color;
  text-decoration: none;
}

.error-list {
  margin: 10px 0px;
}

.error-report {
  margin: 25px 0px;
  font-family: monospace;
  font-size: 12px;
}

.error-json {
  margin: 8px;
  border-left: 3px solid @brand-danger;
  padding-left: 8px;
  white-space: pre;
}
