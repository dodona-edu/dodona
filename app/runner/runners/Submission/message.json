{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "id-online": "http://dodona.ugent.be/schemas/1.0/Submission/message.json",
    "title": "Message",
    "description": "Feedback message without an evaluation status.",
    "type": "object",
    "allOf": [
        { "$ref": "definitions.json#/Access" },
        {
            "properties": {
		        "format": {
		            "description": "Determines which renderer to use for the message (text, markdown, html, json, annotation, ...)",
		            "type": "string"
		        },
		        "description": {
		            "description": "Description of the message.",
		            "type": "string"
		        }
            },
	        "required": [
	            "format",
	            "description"
	        ]
        }
    ]
}