<% if activity.access_private? && local_assigns[:series].nil? %>
  <i class="mdi mdi-eye-off mdi-18" title="<%= t('activities.index.private') %>"></i>
<% end %>
<% if activity.removed? %>
  <i class="mdi mdi-delete mdi-18" title="<%= t('activities.index.removed') %>"></i>
<% elsif activity.not_valid? %>
  <i class="mdi mdi-alert-circle mdi-18" title="<%= t('activities.index.invalid') %>"></i>
<% end %>
<% if activity.draft? %>
  <i class="mdi mdi-file-document-edit-outline mdi-18 colored-warning" title="<%= t('activities.index.draft-notice') %>"></i>
<% end %>
