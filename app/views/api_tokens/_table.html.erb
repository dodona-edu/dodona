<% if user.api_tokens.count.zero? %>
  <p class="lead text-center"><%= t ".no_tokens_yet" %></p>
<% else %>
  <table class="table table-resource">
    <thead>
    <tr>
      <th><%= ApiToken.human_attribute_name("description") %></th>
      <th><%= ApiToken.human_attribute_name("created_at") %></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% user.api_tokens.each do |token| %>
      <tr id="api-token-<%= token.id %>">
        <td><%= token.description %></td>
        <td><%= l token.created_at %></td>
        <td class="text-end">
          <%= button_to api_token_path(token), method: :delete, remote: true, class: 'btn btn-icon btn-icon-filled bg-danger' do %>
            <i class="mdi mdi-delete"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
    <tfoot>
    </tfoot>
  </table>
<% end %>
