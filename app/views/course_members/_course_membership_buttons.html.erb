<% case membership_status %>
<% when 'pending' %>
  <%= button_to update_membership_course_path(course),
                remote: true,
                params: {user: user.id, status: 'student'},
                title: t('users.index.accept'),
                class: 'btn btn-sm btn-success' do %>
    <i class="material-icons md-18" aria-hidden='true'>done</i>
  <% end %>
  <%= button_to update_membership_course_path(course),
                remote: true,
                params: {user: user.id, status: 'unsubscribed'},
                title: t('users.index.decline'),
                class: 'btn btn-sm btn-danger' do %>
    <i class="material-icons md-18" aria-hidden='true'>delete</i>
  <% end %>
<% when 'student' %>
  <% if policy(course).update_course_admin_membership? %>
    <%= button_to update_membership_course_path(course),
                  remote: true,
                  params: {user: user.id, status: 'course_admin'},
                  title: t('users.index.promote'),
                  data: {confirm: t('general.are_you_sure')},
                  class: 'btn btn-sm btn-default' do %>
      <i class="material-icons md-18" aria-hidden='true'>school</i>
    <% end %>
  <% end %>
  <%= button_to update_membership_course_path(course),
                remote: true,
                params: {user: user.id, status: 'unsubscribed'},
                title: t('users.index.unsubscribe'),
                data: {confirm: t('general.are_you_sure')},
                class: 'btn btn-sm btn-default' do %>
    <i class="course-mdi-icon mdi mdi-delete md-18" aria-hidden="true"></i>
  <% end %>
<% when 'course_admin' %>
  <% if policy(course).update_course_admin_membership? %>
    <%= button_to update_membership_course_path(course),
                  remote: true,
                  params: {user: user.id, status: 'student'},
                  title: t('users.index.demote'),
                  data: {confirm: t('general.are_you_sure')},
                  class: 'btn btn-sm btn-default' do %>
      <i class="material-icons md-18 material-icons-strikethrough" aria-hidden='true'>school</i>
    <% end %>
    <%= button_to update_membership_course_path(course),
                  remote: true,
                  params: {user: user.id, status: 'unsubscribed'},
                  title: t('users.index.unsubscribe'),
                  data: {confirm: t('general.are_you_sure')},
                  class: 'btn btn-sm btn-default' do %>
      <i class="course-mdi-icon mdi mdi-delete" aria-hidden='true'></i>
    <% end %>
  <% end %>
<% when 'unsubscribed' %>
  <%= button_to update_membership_course_path(course),
                remote: true,
                params: {user: user.id, status: 'student'},
                title: t('courses.show.subscribe'),
                data: {confirm: t('general.are_you_sure')},
                class: 'btn btn-sm btn-default' do %>
    <i class="material-icons md-18" aria-hidden="true">person_add</i>
  <% end %>
<% end %>
