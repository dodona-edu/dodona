<%= content_for :javascripts do %>
  <%= javascript_pack_tag 'course' %>
<% end %>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= @user.full_name %></h2>
      </div>
      <div class="card-supporting-text">
        <p>
          <% if policy(@user).impersonate? %>
            <%= link_to impersonate_user_path(@user), class: "btn btn-default" do %>
              <i class="material-icons md-18">person</i> <%= t("layout.impersonate.impersonate") %>
            <% end %>
          <% end %>
        </p>
        <p>
          <strong><%= User.human_attribute_name("first_name") %>:</strong> <%= @user.first_name %>
        </p>
        <p>
          <strong><%= User.human_attribute_name("last_name") %>:</strong> <%= @user.last_name %>
        </p>
        <p>
          <strong><%= User.human_attribute_name("username") %>:</strong> <%= @user.username %>
        </p>
        <p>
          <strong><%= User.human_attribute_name("ugent_id") %>:</strong> <%= @user.ugent_id %>
        </p>
        <p>
          <strong><%= User.human_attribute_name("email") %>:</strong> <%= @user.email %>
        </p>
        <p>
          <strong><%= User.human_attribute_name("time_zone") %>:</strong> <%= @user.time_zone %>
        </p>
        <p>
          <strong><%= t ".correctly_solved" %>:</strong> <%= @user.correct_exercises(@course) %>
        </p>
        <p>
          <strong><%= t ".unfinished" %>:</strong> <%= @user.unfinished_exercises(@course) %>
        </p>
        <p>
          <strong><%= t ".solutions" %>
            :</strong> <%= link_to @user.submissions.in_course(@course).count, user_submissions_path(@user, course_id: @course.id) %>
        </p>
      </div>
      <div class="card-supporting-text" id="series-listing">
        <% @series.first(@series_loaded).each do |series| %>
          <%= render(partial: 'series/series', locals: {series: series, loaded: true, user: @user}) %>
        <% end %>
        <% @series.offset(@series_loaded).each do |series| %>
          <%= render(partial: 'series/series', locals: {series: series, loaded: false, user: @user}) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
    $(dodona.initCourseShow);
</script>
