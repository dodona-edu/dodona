<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t '.title', base: @base.name %></h2>
        <div class="card-title-fab">
          <%= render 'application/fab_button', form: 'copy_course', icon: 'done' %>
        </div>
      </div>
      <div class="card-supporting-text">
        <%= render 'form', course: @course, base: @base, copy_admins: @copy_admins %>
      </div>
    </div>
  </div>
</div>
