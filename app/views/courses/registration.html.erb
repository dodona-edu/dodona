<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t '.page_title' %></h2>
      </div>
      <div class="card-supporting-text row">
        <div class="col-sm-12">
          <p><%= t '.explanation_html', course_name: @course.name %>
            <% if @course.moderated %>
            <p><%= t '.moderated' %>
          <% end %>
        </div>
      </div>
      <div class="card-actions card-border">
        <%= registration_action_for course: @course,
                                    membership: @current_membership,
                                    secret: @secret %>
      </div>
    </div>
  </div>
</div>
</div>
