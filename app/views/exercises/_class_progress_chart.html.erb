<%
    users_total += 0.0001
    parts = [
        { percent: users_correct / users_total, class: 'correct' },
        { percent: (users_tried - users_correct) / users_total, class: 'wrong' },
        { percent: 1 - (users_tried / users_total), class: 'not-started' }
    ]
    cumulativePercent = 0

    parts = parts.map do |part|
        startX, startY = [cumulativePercent, 0.5]
        cumulativePercent += part[:percent]
        endX, endY = [cumulativePercent, 0.5]
        
        "<line class='#{part[:class]}' x1='#{startX}' y1='#{startY}' x2='#{endX}' y2='#{endY}' />"
    end
%>

<svg viewBox="0 0 1 1" preserveAspectRatio="none" height="8" width="100" class='class-progress-chart'>
    <%=raw parts.join("") %>
</svg>