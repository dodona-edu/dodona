<% if exercise.access_private? && local_assigns[:series].nil? %>
  <%= content_tag :span, nil,
                  class: 'glyphicon glyphicon-eye-close',
                  title: t('exercises.index.private') %>
<% end %>
<% if exercise.removed? %>
  <%= content_tag :span, nil,
                  class: 'glyphicon glyphicon-trash',
                  title: t('exercises.index.removed') %>
<% elsif exercise.not_valid? %>
  <%= content_tag :span, nil,
                  class: 'glyphicon glyphicon-exclamation-sign',
                  title: t('exercises.index.invalid') %>
<% end %>
