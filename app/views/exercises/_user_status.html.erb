<% submission = summary.latest_submission %>
<% if summary.submitted? %>
  <% if summary.solved? %>
    <% if !summary.solved_before_deadline? %>
      <%= link_to submission do %>
        <%= t 'exercises.exercise.correct_after_deadline' %>
      <% end %>
    <% else %>
      <%= link_to submission, class: 'deadline-ok' do %>
        <%= t 'exercises.exercise.correct' %>
      <% end %>
    <% end %>
  <% else %>
    <% if summary.solved_before_deadline? %>
      <%= link_to submission do %>
        <%= t 'exercises.exercise.wrong_after_deadline' %>
      <% end %>
    <% else %>
      <% if summary.accepted_submission_exists? %>
        <%= link_to summary.accepted_submission,
                    title: t('series.show.best_is_not_last'),
                    class: 'btn btn-icon' do %>
          <i class="material-icons colored-warning md-18">warning</i>
        <% end %>
      <% else %>
        <%= link_to submission do %>
          <%= t 'exercises.exercise.wrong' %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <% if summary.deadline_passed? %>
    <%= content_tag :span, class: 'deadline-passed' do %>
      <%= t 'series.show.missed_deadline' %>
    <% end %>
  <% else %>
    <%= t 'exercises.exercise.not_solved' %>
  <% end %>
<% end %>
