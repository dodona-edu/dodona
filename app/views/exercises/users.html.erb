<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t ".overview" %> <%= @exercise.name %></h2>
      </div>
      <div class="card-supporting-text">
        <table class="table table-index table-resource">
          <thead>
            <tr>
              <th></th>
              <th><%= User.human_attribute_name("username") %></th>
              <th><%= User.human_attribute_name("name") %></th>
              <th><%= Submission.human_attribute_name("status") %></th>
              <th><%= t ".solutions" %></th>
              <th><%= t ".speed" %></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <% last_submission = @exercise.last_submission(user) %>
              <% accepted = last_submission.try(:accepted) %>
              <tr>
                <td>
                  <% if accepted == true %>
                    <span class="glyphicon glyphicon-ok"></span>
                  <% elsif accepted == false %>
                    <span class="glyphicon glyphicon-remove"></span>
                  <% end %>
                </td>
                <td><%= link_to user.username, user %></td>
                <td><%= user.full_name %></td>
                <td>
                  <% if accepted == true %>
                    <%= link_to "correct", last_submission %>
                  <% elsif accepted == false %>
                    <%= link_to last_submission.summary, last_submission %>
                  <% else %>
                    <%= t ".not_solved" %>
                  <% end %>
                </td>
                <td><%= @exercise.number_of_submissions_for(user) %></td>
                <td><%= @exercise.solving_speed_for(user) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
