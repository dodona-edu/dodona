
<div class="row">
  <div class="col-12">
    <div class="card feedback-show">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t('.title', user: @feedback.user.full_name, exercise: @feedback.exercise.name) %></h2>
      </div>
      <div class="card-supporting-text card-border">
        <%= render partial: 'layouts/searchbar', locals: { statuses: Submission.statuses.keys } %>
        <div id="submissions-table-wrapper">
          <%= render partial: 'submissions_table', locals: { submissions: @submissions } %>
        </div>
      </div>
    </div>
  </div>
</div>
