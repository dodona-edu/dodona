<%= form_for(institution, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if institution.errors.any? %>
    <div class="callout callout-danger" id="error_explanation">
      <h4><%= t('errors.validation_errors', :count => institution.errors.count) %></h4>
      <ul>
        <% institution.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group">
    <%= f.label :name, :class => "col-sm-3 col-xs-12 control-label" %>
    <div class="col-sm-6 col-xs-12"><%= f.text_field :name, class: "form-control", disabled: !f.permission?(:name) %></div>
  </div>
  <div class="field form-group">
    <%= f.label :short_name, :class => "col-sm-3 col-xs-12 control-label" %>
    <div class="col-sm-6 col-xs-12"><%= f.text_field :short_name, class: "form-control", disabled: !f.permission?(:short_name) %></div>
  </div>
  <div class="field form-group">
    <%= f.label :identifier, :class => "col-sm-3 col-xs-12 control-label" %>
    <div class="col-sm-6 col-xs-12"><%= f.text_field @institution.saml? ? :entity_id : :identifier, class: "form-control", disabled: true %></div>
  </div>
<% end %>
