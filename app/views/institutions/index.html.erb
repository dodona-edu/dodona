<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t('.title') %></h2>
      </div>
      <div class="card-supporting-text">
        <div class="table-scroll-wrapper">
          <table class="table table-index table-resource">
            <thead>
            <tr>
              <th><%= Institution.human_attribute_name(:name) %></th>
              <th><%= Institution.human_attribute_name(:short_name) %></th>
              <th><%= t('.number_of_users') %></th>
              <th><%= Institution.human_attribute_name(:provider) %></th>
              <th class="actions"></th>
            </tr>
            </thead>
            <tbody>
            <% @institutions.each do |institution| %>
              <tr>
                <% institution_identifier = institution.saml? ? institution.entity_id : institution.identifier %>
                <td><%= link_to institution.name == Institution::NEW_INSTITUTION_NAME ? institution_identifier : institution.name, institution %></td>
                <td><%= institution.short_name %></td>
                <td><%= link_to institution.users.count, users_url(institution_id: institution.id) %></td>
                <td><%= t("activerecord.attributes.institution.providers.#{institution.provider}") %></td>
                <td class="actions">
                  <% if policy(institution).edit? %>
                    <%= link_to edit_institution_path(institution), title: t("institutions.index.edit"), class: "btn btn-sm btn-default" do %>
                      <i class="material-icons md-18">edit</i>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
