<footer class="footer">
  <div class="footer-block">
    &copy; <%= Date.today.year %> <%= t "layout.footer.ugent" %>
  </div>
  <div class='footer-spacer'></div>
  <div class="footer-block">
    <div class='footer-version'>
      <a href="https://twitter.com/DodonaEdu" target="_blank">
        <i class="mdi mdi-18 mdi-twitter"></i>
      </a>
      <%= link_to 'Contact', contact_path %>
      <% version_info = "Dodona #{Dodona::Application::VERSION}" %>
      <% version_info += " (ruby #{RUBY_VERSION} #{`which ruby`})" if Rails.env.development? %>
      <%= link_to version_info, posts_path %>
    </div>
  </div>
</footer>
