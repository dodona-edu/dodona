                <% if policy(Judge).index? %>
                  <li class='visible-sm-block'><%= link_to t("layout.menu.judges"), judges_path %></li>
                <% end %>
                <% if policy(Repository).index? %>
                  <li class='visible-sm-block'><%= link_to t("layout.menu.repositories"), repositories_path %></li>
                <% end %>
                <% if current_user.zeus? %>
                  <li class='visible-sm-block'><%= link_to "Job queue", "/dj/overview" %></li>
                <% end %>
              <% end %>
