<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card">
      <div class="card-title">
        <h2 class="card-title-text"><%= t '.title' %></h2>
      </div>
      <div class="card-supporting-text row">
        <div class="col-sm-12">
          <p><%= t '.explanation_html', provider: t(".#{session[:provider] || :unknown}") %>
        </div>
      </div>
      <div class="card-actions card-border">
        <%= link_to t('.more_info'), about_path, class: 'btn-text' %>
      </div>
      </div>
    </div>
  </div>
</div>
