<%= form_for(repository, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if repository.errors.any? %>
    <div class="callout callout-danger" id="error_explanation">
      <h4><%= t('errors.validation_errors', :count => repository.errors.count) %></h4>
      <ul>
        <% repository.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group">
    <%= f.label :name, :class => "col-sm-3 control-label" %>
    <div class="col-sm-6"><%= f.text_field :name, class: "form-control" %></div>
  </div>
  <div class="field form-group">
    <%= f.label :remote, :class => "col-sm-3 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :remote,
                       class: "form-control",
                       placeholder: "git@github.ugent.be/...",
                       disabled: repository.new_record?.! %>
    </div>
    <span class="help-block col-sm-offset-3 col-sm-6">
      <% if repository.new_record? %>
        <%= t ".remote-help" %>
      <% else %>
        <%= t('.remote_cant_be_edited_html') %>
      <% end %>
    </span>
  </div>
  <div class="field form-group">
    <%= f.label :judge, :class => "col-sm-3 control-label" %>
    <div class="col-sm-6"><%= f.select :judge_id, Judge.all.collect {|j| [j.name, j.id]}, {}, {class: "form-control"} %></div>
    <span class="help-block col-sm-offset-3 col-sm-6"><%= t ".judge-help" %></span>
  </div>
<% end %>
