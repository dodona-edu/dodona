<% is_allowed = course.usable_repositories.include?(repository) %>
<% if is_allowed && show_delete_button %>
  <button type="button" class="btn btn-icon btn-icon-filled d-btn-danger remove-course">
    <i class="mdi mdi-delete"></i>
  </button>
<% elsif !is_allowed %>
  <button type="button" class="btn btn-icon add-course">
    <i class="mdi mdi-plus"></i>
  </button>
<% else %>
  <button type="button" class="btn btn-icon add-course invisible">
    <i class="mdi mdi-plus"></i>
  </button>
<% end %>
