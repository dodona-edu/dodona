<% get_exercise_path ||= ->(ex) { course_series_exercise_path series.course_id, series.id, ex } %>
<% unless defined? loaded %>
  <% loaded = true %>
<% end %>
<% if defined? user
     user = user || current_user
   else
     user = current_user
   end %>
<% if loaded %>
  <% summary ||= SeriesSummary.new(
    user: user,
    series: series,
    exercises: series.exercises) %>
<% else %>
  <% summary ||= nil %>
<% end %>

<div class="card card-supporting-text series"
     id="series-card-<%= series.id %>"
     data-series-url="<%= series_path(series, format: :js, user_id: user.id) %>">
  <div class="card-subtitle">
    <a class="anchor" id="<%= series.anchor %>"  name="<%= series.name %>"></a>
    <%= render partial: 'series/series_status', locals: { summary: summary } %>
    <h4 class="ellipsis-overflow" title="<%= series.name %>"><%= series.name %><br>
      <% if series.deadline? %>
        <% if series.deadline > Time.now %>
          <%= "<small class='deadline-ok' title='deadline #{t "series.show.deadline_in"} #{time_ago_in_words series.deadline}'><i class='material-icons md-12 material-icons-alarm'>alarm</i> #{l series.deadline, format: :long}</small>".html_safe %>
        <% else %>
          <%= "<small class='deadline-passed' title='deadline was #{time_ago_in_words series.deadline} #{t 'series.deadline.ago'} '><i class='material-icons md-12 material-icons-alarm'>alarm</i> #{l series.deadline, format: :long}</small>".html_safe %>
        <% end %>
      <% end %>
    </h4>
    <div class="flex-spacer"></div>
    <div class="card-subtitle-actions">
      <div class="btn-group">
        <a class="btn btn-icon dropdown-toggle hidden-print" data-toggle="dropdown">
          <i class="material-icons">more_vert</i>
        </a>
        <ul class="dropdown-menu dropdown-menu-right">
          <% if policy(series).edit? %>
            <li>
              <%= link_to edit_series_path(series) do %>
                <i class='material-icons md-18'>edit</i> <%= t("series.edit.title") %>
              <% end %>
            </li>
          <% end %>
          <% if policy(series).destroy? %>
            <li>
              <%= link_to series_path(series), method: :delete, data: { confirm: t("series.delete.confirm") } do %>
                <i class='material-icons md-18'>delete</i> <%= t("series.delete.title") %>
              <% end %>
            </li>
          <% end %>
          <% if policy(series).edit? && series.hidden? %>
            <li>
              <%= link_to series_path(series, token: series.access_token) do %>
                <i class="material-icons md-18">link</i>
                <%= t 'series.show.token_link' %>
              <% end %>
            </li>
          <% end %>
          <% if policy(series).scoresheet? %>
            <li>
              <%= link_to scoresheet_series_path(series) do %>
                <i class='material-icons md-18'>view_list</i> <%= t("series.show.series_scoresheet") %>
              <% end %>
            </li>
          <% end %>
          <% if policy(series).mass_rejudge? %>
            <li>
              <%= link_to mass_rejudge_series_path(series), method: :post, remote: true, data: { confirm: t("submissions.index.confirm_reevaluate_submissions") } do %>
                <i class='material-icons md-18'>replay</i> <%= t("submissions.index.reevaluate_submissions") %>
              <% end %>
            </li>
          <% end %>
          <% if policy(series).edit? %>
            <li role="separator" class="divider"></li>
          <% end %>
          <% if policy(series).show? %>
            <li>
              <%= link_to overview_series_path(series, token: (series.access_token if series.hidden?)) do %>
                <i class='material-icons md-18'>visibility</i> <%= t("series.show.show_overview") %>
              <% end %>
            </li>
          <% end %>
          <% if policy(series).download_solutions? %>
            <li>
              <%= link_to download_solutions_series_path(series, token: (series.access_token if series.hidden?)) do %>
                <i class='material-icons md-18'>cloud_download</i> <%= t("series.show.download_solutions") %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <% if current_user&.course_admin?(series.course) && series.hidden?%>
    <div class="alert alert-info hidden-print"><%= t "series.show.series_not_visible" %></div>
  <% end %>
  <% if current_user&.course_admin?(series.course) && series.closed?%>
    <div class="alert alert-info hidden-print"><%= t "series.show.series_not_accessible" %></div>
  <% end %>
  <%= markdown(series.description) %>

  <% if series.exercises.length > 0 %>
    <div class="series-exercises-table-wrapper">
    <% if loaded %>
      <%= render partial: 'exercises/exercises_table', locals: {
            series: series,
            exercises: series.exercises,
            get_exercise_path: get_exercise_path,
            summary: summary,
            user: user,
      } %>
    <% else %>
      <div class="exercise-table-skeleton">
        <div class="skeleton-head"></div>
        <% series.exercises.count.times do %>
          <div class="skeleton-row"></div>
        <% end %>
      </div>
    <% end %>
    </div>
  <% end %>
</div>
