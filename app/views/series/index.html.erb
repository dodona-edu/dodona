<div class="row">
  <div class="col-md-10 offset-md-1 col-12">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t ".title" %></h2>
      </div>
      <div class="card-supporting-text">
        <table class="table table-index table-resource">
          <thead>
          <tr>
            <th><%= Series.human_attribute_name("name") %></th>
            <th><%= Series.human_attribute_name("course") %></th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @series.each do |series| %>
            <tr>
              <td><%= link_to series.name, series %></td>
              <td><%= "#{series.course.name} (#{series.course.formatted_year})" %> </td>
              <td class="actions">
                <% if policy(series).edit? %>
                  <%= link_to edit_series_path(series), class: "btn btn-icon" do %>
                    <i class="mdi mdi-pencil"></i>
                  <% end %>
                <% end %>
                <% if policy(series).destroy? %>
                  <%= link_to series, method: :delete, data: {confirm: t("general.are_you_sure")}, class: "btn btn-icon btn-icon-filled bg-danger" do %>
                    <i class="mdi mdi-delete"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
