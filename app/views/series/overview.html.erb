<% summary = ExercisesSummary.new user: current_user, series: @series %>
<%= content_for :javascripts do %>
  <%= javascript_pack_tag 'series_overview' %>
<% end %>

<div class="col-sm-10 col-sm-offset-1 col-xs-12">
  <div class="card">
    <div class="card-title card-title-colored">
      <h2 class="card-title-text">
        <%= @series.course.name %>
      </h2>
    </div>
    <div class="card-supporting-text">
      <%= render partial: 'series/series', locals: {
            series: @series,
            get_exercise_path: method(:exercise_anchor)
          } %>
    </div>
  </div>
  <% summary.exercise_summaries.each do |ex| %>
    <div class="card exercise-description">
      <%= content_tag :a,
            '',
            name: exercise_anchor_id(ex.exercise),
            class: 'anchor' %>
      <div class="card-title card-title-colored">
        <h2 class="card-title-text">
          <%= link_to ex.exercise.name, exercise_path(ex.exercise) %>
        </h2>
      </div>
      <%= render partial: 'exercises/description_card',
                 locals: { exercise: ex.exercise } %>
      <div class="card-actions card-border hidden-print">
        <% if ex.submitted? || ex.deadline_passed? %>
          <div class="btn-text submission-status-button">
            <%= render partial: 'exercises/status_icon', locals: { summary: ex } %>
            <%= render partial: 'exercises/exercise_user_status', locals: { summary: ex } %>
          </div>
        <% else %>
          <%= link_to t('exercises.show.handin'), course_exercise_path(@series.course, ex.exercise, anchor: "submission-card"), class: "btn-text" %>
        <% end %>
      </div>
    </div>
  <% end %>
  <script type="text/javascript">
      $(function() {
        dodona.initExercisesReadonly();
      });
  </script>
</div>
