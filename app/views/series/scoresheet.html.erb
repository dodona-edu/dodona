<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text">
          <%= "#{@series.name} (#{@course.name})" %>
        </h2>
      </div>
      <div class="card-supporting-text">
        <div class="alert alert-info"><%= t ".slow_loading" %></div>
        <table class="table">
          <thead>
            <tr>
              <th><%= t ".user" %></th>
              <% @exercises.each do |exercise| %>
                <th class="status-icon-header"><%= exercise.name %></th>
                <!-- <th colspan="2"><%= exercise.name %></th> -->
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @course.users.each do |student| %>
              <tr>
                <td><%= link_to student.short_name, user_submissions_path(student), title: student.full_name %></td>
                <% @exercises.each do |exercise| %>
                  <% submission = exercise.last_submission(student, @series.deadline) %>
                  <td class="status-icon">
                    <% if submission.present? %>
                      <%= link_to submission_status_icon(submission), submission, title: Submission.human_enum_name(:status, submission.status) %>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
