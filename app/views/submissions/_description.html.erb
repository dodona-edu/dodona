
<p>
  <% if current_user.admin? %>
    <b><%= t "submissions.show.user" %>:</b> <%= link_to submission.user.full_name + " - " + submission.user.username, user_path(submission.user) %><br />
  <% end %>
  <b><%= t "submissions.show.exercise" %>:</b> <%= link_to submission.exercise.name, exercise_path(submission.exercise) %><br />
  <b><%= t "submissions.show.handed_in" %>:</b> <span title="<%= l submission.created_at, format: :submission %>"><%= time_ago_in_words submission.created_at %> <%= t "submissions.show.ago" %></span><br />
  <b><%= t "submissions.show.status" %>:</b> <%= Submission.human_enum_name(:status, submission.status) %><br />
  <% if submission.summary.present? %>
  <b><%= t "submissions.submissions_table.summary" %>:</b> <%= submission.summary %><br />
  <% end %>
</p>
<% unless submission.queued? or submission.running? %>
  <p><%= submission.judge.renderer.new(submission, current_user).parse %></p>
<% end %>
