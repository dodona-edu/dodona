<% content_for :navbar do %>
  <%= navbar_link url: evaluate_submission_path(@submission),
                  title: t('submissions.show.reevaluate'),
                  icon: 'refresh',
                  if: policy(@submission).evaluate? %>
  <%= navbar_link url: download_submission_path(@submission),
                  title: 'Download',
                  icon: 'save_alt',
                  target: '_blank',
                  download: '',
                  if: policy(@submission).download? %>
  <%= navbar_link url: edit_submission_path(@submission),
                  title: t('submissions.show.edit'),
                  icon: 'edit',
                  if: policy(@submission).create? %>
<% end %>
