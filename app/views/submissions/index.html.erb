<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <div class="card exercise-description">
      <div class="card-title card-title-colored">
        <h2 class="card-title-text"><%= t ".title" %>
          <% if @exercise %>
            <%= t ".for" %> <%= @exercise.name.titleize %>
          <% end %>
          <% if @user %>
             <%= t ".from" %>&nbsp;<%= link_to @user.full_name, user_path(@user) %>
          <% end %>
        </h2>
      </div>
      <div class="card-supporting-text">
        <div id="submissions-table-wrapper">
          <%= render partial: 'submissions_table', locals: {submissions: @submissions, exercise: @exercise}  %>
        </div>
      </div>
    </div>
  </div>
</div>
