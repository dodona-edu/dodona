{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "id-online": "http://dodona.ugent.be/schemas/DodonaSubmission/testcase.json",
    "title": "TestCase",
    "description": "Node at depth 3 in the test hierarchy that provides an evaluation on tests.",
    "type": "object",
    "allOf": [
        { "$ref": "../Submission/definitions.json#/TestGroupBase" },
        {
            "properties": {
                "tests": {
                    "description": "List of tests.",
                    "type": "array",
                    "items": {
                        "$ref": "test.json#"
                    }
                }
            }
        }
    ]
}