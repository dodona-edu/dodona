{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "id-online": "http://dodona.ugent.be/schemas/Submission/testgroup.json",
    "title": "TestGroup",
    "description": "Node in the test hierarchy that may contain individual tests or other groups.",
    "type": "object",
    "allOf": [
        { "$ref": "definitions.json#/TestGroupBase" },
        {
            "properties": {
		        "groups": {
		            "description": "List of subgroups.",
		            "type": "array",
		            "items": {
		                "$ref": "testgroup.json#"
		            }
		        },
		        "tests": {
		            "description": "List of tests.",
		            "type": "array",
		            "items": {
		                "$ref": "test.json#"
		            }
		        }
            }
        }
    ]
}