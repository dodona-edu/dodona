{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": false,
    "experimentalDecorators": true,
    "lib": ["es7", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "app",
    "paths": {
      "*": ["assets/javascripts/*", "javascript/components/*"]
    },
    "pretty": true
  },
  "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public", "data"],
  "compileOnSave": false
}
